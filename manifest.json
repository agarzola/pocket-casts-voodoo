{
    "name": "Pocket Casts Voodoo",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Allows Pocket Castsâ€™ web app to play episodes without subscribing to a podcast.",
    "homepage_url": "http://github.com/agarzola/pocket-casts-voodoo",
    "permissions": [ "tabs","http://play.pocketcasts.com/" ],
    "content_scripts": [
      {
        "matches": [ "*://play.pocketcasts.com/*" ],
        "js": ["scripts/voodoo.js"],
        "run_at": "document_idle"
      }
    ],
    "background": {
      "scripts": [ "scripts/background.js" ],
      "persistent": false
    }
}
